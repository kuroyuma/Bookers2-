<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= form_with model:@book, local: true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"タイトル"%>
          <!--<input class="form-control book_title" type="text" value="dcva" name="book[title]" id="book_title">-->
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
        </div>
        <div class="form-group">
        <%= f.text_area :body, autofocus: true, id:"inputName", placeholder:""%>
        <!--<input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">-->
        </div>
        <div class="form-group">
        <%= f.submit "Update Book" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
  	  <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
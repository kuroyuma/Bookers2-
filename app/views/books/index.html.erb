<body>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/list', user: @user , book: @book %>

      <div class="col-md-8 offset-md-1 ">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
</body>
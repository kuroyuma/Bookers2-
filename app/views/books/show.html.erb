<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/list', user: @user , book: @book_new %>

      </div>

      <div class="col-md-8 offset-md-1 ">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
                <th colspan="3"></th>
            </thead>
          <tbody>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <br><%= link_to user_path(@user.id) do %><%= @user.name  %><% end %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book) %></td>
                <td><%= link_to "Destroy", @book, method: :delete %></td>
                <% end %>
              </tr>
          </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
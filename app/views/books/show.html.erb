<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/list', user: @user , book: @book %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody><tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            <br><%= link_to user_path(@user.id) do %><%= @user.name  %><% end %></td>
  
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
            <td><%= link_to "edit", edit_book_path(@book), class: "btn btn-sm btn-success" %> 
            <td><%= link_to "destroy", @book, method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
      </tbody></table>
    </div>
  </div>
</div>
      </main>